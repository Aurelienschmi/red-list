<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information sur les pays</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }
        .container {
            text-align: center;
            width: 90%;
            max-width: 600px;
            padding: 20px;
        }
        input {
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 300px;
            margin-bottom: 10px;
        }
        input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0,123,255,0.3);
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px;
        }
        button:hover {
            background-color: #0056b3;
        }
        button:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }
        .info-container {
            margin-top: 20px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: none;
        }
        .error {
            color: red;
            margin-top: 10px;
            display: none;
        }
        .info-item {
            margin: 10px 0;
            text-align: left;
        }
        .flag-container {
            margin: 20px 0;
        }
        .flag {
            width: 200px;
            height: 133px;
            object-fit: cover;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Information sur les pays</h1>
        <input type="text" list="countries-list" id="country-search" placeholder="Rechercher un pays..." autocomplete="off">
        <datalist id="countries-list">
            <% countries.forEach(country => { %>
                <option value="<%= country.name.common %>"></option>
            <% }); %>
        </datalist>
        <br>
        <button id="validate-btn" disabled>Valider</button>
        <div id="error" class="error">Veuillez sélectionner un pays valide.</div>
        <div id="country-info" class="info-container">
            <div class="flag-container">
                <img id="country-flag" class="flag" src="" alt="Drapeau du pays">
            </div>
            <div class="info-item"><strong>Capitale:</strong> <span id="capital"></span></div>
            <div class="info-item"><strong>Population:</strong> <span id="population"></span></div>
            <div class="info-item"><strong>Continent:</strong> <span id="continent"></span></div>
            <div class="info-item"><strong>Langue(s) officielle(s):</strong> <span id="languages"></span></div>
            <div class="info-item"><strong>Monnaie:</strong> <span id="currency"></span></div>
        </div>
    </div>

    <script>
        const countries = <%- JSON.stringify(countries) %>;
        const datalist = document.getElementById("countries-list");
        const searchInput = document.getElementById("country-search");
        const validateBtn = document.getElementById("validate-btn");
        const errorDiv = document.getElementById("error");
        const infoContainer = document.getElementById("country-info");

        // Activer/désactiver le bouton selon la validité du pays
        searchInput.addEventListener('input', () => {
            const isValidCountry = countries.some(country => country.name.common === searchInput.value);
            validateBtn.disabled = !isValidCountry;
            errorDiv.style.display = isValidCountry ? 'none' : 'block';
        });

        // Gérer le clic sur le bouton Valider
        validateBtn.addEventListener('click', () => {
            const selectedCountry = countries.find(country => country.name.common === searchInput.value);

            //envoyer les informations dans l'url 
            
            if (selectedCountry) {
                // Afficher les informations du pays
                document.getElementById('country-flag').src = selectedCountry.flags.png;
                document.getElementById('capital').textContent = selectedCountry.capital ? selectedCountry.capital[0] : 'N/A';
                document.getElementById('population').textContent = selectedCountry.population.toLocaleString();
                document.getElementById('continent').textContent = selectedCountry.region;
                document.getElementById('languages').textContent = Object.values(selectedCountry.languages).join(', ');
                document.getElementById('currency').textContent = Object.values(selectedCountry.currencies).map(currency => currency.name).join(', ');
                infoContainer.style.display = 'block';



                window.location.href = `http://localhost:3000/country/${selectedCountry.cca2}`;
                console.log("apres le click");
            } else {
                // Message par défaut si le pays n'est pas dans la base de données
                document.getElementById('capital').textContent = "Information non disponible";
                document.getElementById('population').textContent = "Information non disponible";
                document.getElementById('continent').textContent = "Information non disponible";
                document.getElementById('languages').textContent = "Information non disponible";
                document.getElementById('currency').textContent = "Information non disponible";
                infoContainer.style.display = 'block';
            }
        });
    </script>
</body>
</html>